<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">


    <!-- Guest place order with payment information saving -->
    <route url="/V1/guest-carts/:cartId/pltoken-information" method="POST">
        <service class="Magento\Checkout\Api\GuestPaymentInformationManagementInterface" method="savePaymentInformationAndPlaceOrder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <!-- Guest place order with payment information saving -->
    <route url="/V1/guest-carts/:cartId/pltoken-information" method="GET">
        <service class="Magento\Checkout\Api\GuestPaymentInformationManagementInterface" method="getPaymentInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <!-- My place order with payment information saving -->
    <route url="/V1/paylink/pltoken-information" method="POST">
        <service class="CityPay\Paylink\Api\PaylinkTokenInformationManagementInterface2" method="getPaylinkToken"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

</routes>
