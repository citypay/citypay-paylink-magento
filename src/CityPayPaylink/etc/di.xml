<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="CityPayPaylinkPaymentGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Magento\CityPayPaylinkPaymentGateway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\CityPayPaylinkPaymentGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">CityPayPaylinkPaymentGatewayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">CityPayPaylinkPaymentGatewayCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="CityPayPaylinkPaymentGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Magento\CityPayPaylinkPaymentGateway\Model\Ui\ConfigProvider::CODE</argument>
            <!--scopeConfig ,pathPattern -->
        </arguments>
    </virtualType>

    <!-- Logger, initialized with CityPayPaylinkPaymentGatewayConfig -->
    <virtualType name="CityPayPaylinkPaymentGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">CityPayPaylinkPaymentGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Magento\CityPayPaylinkPaymentGateway\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">CityPayPaylinkPaymentGatewayLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="CityPayPaylinkPaymentGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="pltoken" xsi:type="string">CityPayPaylinkPaymentGatewayPLTokenCommand</item>
                <!--item name="authorize" xsi:type="string">CityPayPaylinkPaymentGatewayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">CityPayPaylinkPaymentGatewayCaptureCommand</item>
                <item - - name="void" xsi:type="string">CityPayPaylinkPaymentGatewayVoidCommand</item-->
            </argument>
        </arguments>
    </virtualType>

    <!-- PLToken command -->
    <virtualType name="CityPayPaylinkPaymentGatewayPLTokenCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CityPayPaylinkPaymentGatewayPLTokenRequest</argument>
            <argument name="handler" xsi:type="object">CityPayPaylinkPaymentGatewayResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\Client\PaylinkCient</argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="CityPayPaylinkPaymentGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CityPayPaylinkPaymentGatewayAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">CityPayPaylinkPaymentGatewayResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="CityPayPaylinkPaymentGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Magento\CityPayPaylinkPaymentGateway\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Magento\CityPayPaylinkPaymentGateway\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\CityPayPaylinkPaymentGateway\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">CityPayPaylinkPaymentGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="CityPayPaylinkPaymentGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Magento\CityPayPaylinkPaymentGateway\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">CityPayPaylinkPaymentGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="CityPayPaylinkPaymentGatewayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Magento\CityPayPaylinkPaymentGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Magento\CityPayPaylinkPaymentGateway\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">CityPayPaylinkPaymentGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="CityPayPaylinkPaymentGatewayResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Magento\CityPayPaylinkPaymentGateway\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Magento\CityPayPaylinkPaymentGateway\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="CityPayPaylinkPaymentGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CityPayPaylinkPaymentGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="CityPayPaylinkPaymentGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">CityPayPaylinkPaymentGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Magento\CityPayPaylinkPaymentGateway\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">CityPayPaylinkPaymentGatewayConfig</argument>
        </arguments>
    </type>

</config>
